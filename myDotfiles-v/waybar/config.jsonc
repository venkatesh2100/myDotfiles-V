{
  "margin": "5 20 0 20",
  "modules-left": [
    "custom/updates",
    "hyprland/workspaces",
    "custom/spotify",
    "custom/cava"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [
    "network",
    "pulseaudio",
    "backlight",
    "battery",
    "custom/ytube",
    "tray",
